{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.OutputCaching": "Debug",
      "TaskManagement.Api": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Redis": {
    "CacheExpirationInMinutes": 20,
    "CacheKey": {
      "GetAllTasks": "tasks_{Page}_{PageSize}_{Title}_{Description}_{Deadline}_{Priority}_{Status}",
      "GetTask": "task_{Id}",
      "GetAllUsers": "users_{Page}_{PageSize}_{Username}_{Email}",
      "GetUser": "user_{Id}"
    },
    "Tags": {
      "GetAllTasks": "Tasks",
      "GetTask": "Task_{Id}",
      "GetAllUsers": "Users",
      "GetUser": "User_{Id}"
    }
  }
}
